FROM mcp-servers/base:latest

# Copy specific requirements
COPY requirements/jira_requirements.txt /app/requirements/
RUN pip install --no-cache-dir -r requirements/jira_requirements.txt

# Copy server code
COPY servers/jira_server.py /app/servers/

# Expose port
EXPOSE 8004

# Environment variables
ENV PYTHONUNBUFFERED=1

# Run server
CMD ["python", "-m", "uvicorn", "servers.jira_server:app", "--host", "0.0.0.0", "--port", "8004"]

