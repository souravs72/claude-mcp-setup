FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -m -u 1000 appuser
WORKDIR /app

# Copy requirements
COPY requirements/common.txt requirements/internet_requirements.txt /app/requirements/
RUN pip install --no-cache-dir -r requirements/common.txt -r requirements/internet_requirements.txt

# Copy shared modules
COPY servers/__init__.py servers/base_client.py servers/config.py servers/logging_config.py /app/servers/

# Copy server code
COPY servers/internet_server.py /app/servers/

# Change ownership
RUN chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8005

# Environment variables
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8005/health || exit 1

# Run server
CMD ["python", "-m", "uvicorn", "servers.internet_server:app", "--host", "0.0.0.0", "--port", "8005"]

