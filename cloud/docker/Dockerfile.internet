FROM mcp-servers/base:latest

# Copy specific requirements
COPY requirements/internet_requirements.txt /app/requirements/
RUN pip install --no-cache-dir -r requirements/internet_requirements.txt

# Copy server code
COPY servers/internet_server.py /app/servers/

# Expose port
EXPOSE 8005

# Environment variables
ENV PYTHONUNBUFFERED=1

# Run server
CMD ["python", "-m", "uvicorn", "servers.internet_server:app", "--host", "0.0.0.0", "--port", "8005"]

