FROM mcp-servers/base:latest

# Copy specific requirements
COPY requirements/redis_requirements.txt /app/requirements/
RUN pip install --no-cache-dir -r requirements/redis_requirements.txt

# Copy server code
COPY servers/memory_cache_server.py /app/servers/

# Expose port
EXPOSE 8001

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV REDIS_HOST=localhost
ENV REDIS_PORT=6379

# Run server
CMD ["python", "-m", "uvicorn", "servers.memory_cache_server:app", "--host", "0.0.0.0", "--port", "8001"]

